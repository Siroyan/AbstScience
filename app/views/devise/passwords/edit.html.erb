<div class="container">
	<main>
		<section class="py-5">
			<h2 class="text-center mb-5">パスワードの変更</h2>
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
				<%= render "devise/shared/error_messages", resource: resource %>
				<%= f.hidden_field :reset_password_token %>

				<div class="form-group mb-3">
					<%= f.label :password, '新しいパスワード' %><br />
					<% if @minimum_password_length %>
						<em>(<%= @minimum_password_length %> 文字以上にしてください)</em><br />
					<% end %>
					<%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
				</div>

				<div class="form-group mb-3">
					<%= f.label :password_confirmation, 'パスワードの確認' %><br />
					<%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
				</div>

				<div class="actions">
					<%= f.submit "パスワードの変更", class: 'btn btn-primary w-100' %>
				</div>
			<% end %>
			<%= render "devise/shared/links" %>
		</section>
	</main>
</div>
